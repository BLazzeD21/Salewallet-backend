{
  "name": "salewallet-backend",
  "version": "0.0.1",
  "description": "cardholder",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf build/",
    "build": "npm run clean && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "dev": "cross-env NODE_ENV=development npm run build && node build/index.js",
    "start:pm2": "cross-env NODE_ENV=production pm2 start build/index.js --name salewallet-backend",
    "restart:pm2": "pm2 restart salewallet-backend",
    "stop:pm2": "pm2 stop salewallet-backend",
    "logs:pm2": "pm2 logs salewallet-backend",
    "dev:pm2": "cross-env NODE_ENV=development pm2 start src/index.ts --name salewallet-backend --interpreter ts-node --watch",
    "patch": "npm version patch -m \"version: %s\"",
    "minor": "npm version minor -m \"version: %s\"",
    "major": "npm version major -m \"version: %s\"",
    "format": "biome format --write .",
    "type": "tsc --noEmit",
    "check": "npx biome check --staged --write",
    "pre-commit": "npm run type && lint-staged",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BLazzeD21/Salewallet-backend.git"
  },
  "keywords": [
    "salewallet"
  ],
  "author": "Sekerin Alexandr",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BLazzeD21/Salewallet-backend/issues"
  },
  "homepage": "https://github.com/BLazzeD21/Salewallet-backend#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.11.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "globals": "^15.4.0",
    "nodemon": "^3.1.3",
    "pg": "^8.12.0",
    "pm2": "^5.3.0",
    "rimraf": "^5.0.7",
    "sequelize": "^6.32.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "^16.2.7",
    "nodemailer": "^7.0.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsc-alias": "^1.8.16",
    "yamljs": "^0.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "biome check --write"
    ]
  }
}
